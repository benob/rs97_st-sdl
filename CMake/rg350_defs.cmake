set(AUTOSCALE 1)

set(KEY_ENTER SDLK_LCTRL)
set(LABEL_KEY_ENTER \"A\")
set(KEY_TOGGLE SDLK_LALT)
set(LABEL_KEY_TOGGLE \"B\")
set(KEY_BACKSPACE SDLK_BACKSPACE)
set(LABEL_KEY_BACKSPACE \"R\")
set(KEY_SHIFT SDLK_TAB)
set(LABEL_KEY_SHIFT \"L\")
set(KEY_LOCATION SDLK_LSHIFT)
set(LABEL_KEY_LOCATION \"Y\")
set(KEY_ACTIVATE SDLK_SPACE)
set(LABEL_KEY_ACTIVATE \"X\")
set(KEY_QUIT SDLK_ESCAPE)
set(LABEL_KEY_QUIT \"SELECT\")
set(KEY_HELP SDLK_RETURN)
set(LABEL_KEY_HELP \"START\")

# Optional bindings for arrow keys when virtual keyboard is active
set(KEY_ARROW_LEFT SDLK_PAGEUP)
set(LABEL_KEY_ARROW_LEFT \"L2\")
set(KEY_ARROW_RIGHT SDLK_PAGEDOWN)
set(LABEL_KEY_ARROW_RIGHT \"R2\")
set(KEY_ARROW_UP SDLK_KP_DIVIDE)
set(LABEL_KEY_ARROW_UP \"L3\")
set(KEY_ARROW_DOWN SDLK_KP_PERIOD)
set(LABEL_KEY_ARROW_DOWN \"R3\")
